<% include ./partials/header %>

<div class="container margin-top-bottom">
  <h1 class="center-heading">
    Create an Account
  </h1>
  <form action="/register" method="post" class="form">
    <div class="">
      <div class="form__field">
        <i class="fas fa-user form__icon"></i>
        <input type="text" name="firstName" placeholder="First name" autofocus>
      </div>
      <div class="form__field">
        <i class="fas fa-user form__icon"></i>
        <input type="text" name="lastName" placeholder="Last name">
      </div>
      <div class="form__field">
        <i class="fas fa-envelope form__icon"></i>
        <input type="email" name="email" placeholder="Student@gmail.com">
      </div>
      <div class="form__field">
        <i class="fas fa-pen form__icon"></i>
        <input type="text" name="username" placeholder="Username">
      </div>
      <div class="form__field">
        <i class="fas fa-lock form__icon"></i>
        <input type="password" name="password" placeholder="Password">
      </div>
      <div class="form__field">
        <i class="fas fa-camera-retro form__icon"></i>
        <input type="text" name="avatar" placeholder="Profile photo url">
      </div>
      <div class="form__field">
        <i class="fas fa-key form__icon"></i>
        <input type="text" name="adminCode" placeholder="Admin code">
      </div>
      <input type="submit" value="Sign Up" id="btn" class="ui fluid large teal submit button">
    </div>

    <div class="ui error message"></div>

  </form>

  <div class="form-message">
    Already have an account? <a class="btn" href="/login">Login</a>
  </div>
</div>

<% include ./partials/footer %>