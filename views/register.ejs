<% include ./partials/header %>

<div class="ui middle aligned center aligned grid">
  <div class="column register-form">
    <h2 class="ui image header">
      <div class="content">
        Create an Account
      </div>
    </h2>
    <form action="/register" method="post" class="ui large form">
      <div class="ui stacked secondary  segment">
        <div class="field">
          <label for="firstName">First Name</label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="firstName" placeholder="first name">
          </div>
        </div>
        <div class="field">
          <label for="lastName">Last Name</label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="lastName" placeholder="last name">
          </div>
        </div>
        <div class="field">
          <label for="email">Email</label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="email" name="email" placeholder="student@gmail.com">
          </div>
        </div>
        <div class="field">
          <label for="username">Username</label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="username" placeholder="Username">
          </div>
        </div>
        <div class="field">
          <label for="password">Password</label>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="password" name="password" placeholder="Password">
          </div>
        </div>
        <div class="field">
          <label for="avatar">Profile Photo URL</label>
          <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="avatar" placeholder="profile photo url">
          </div>
        </div>
        <div class="field">
          <label for="adminCode">Admin Code</label>
          <div class="ui left icon input">
            <i class="lock icon"></i>
            <input type="text" name="adminCode" placeholder="Admin code">
          </div>
        </div>
        <input type="submit" value="Sign Up" class="ui fluid large teal submit button">
      </div>

      <div class="ui error message"></div>

    </form>

    <div class="ui message">
      Already have an account? <a href="https://s.codepen.io/voltron2112/debug/PqrEPM?">Login</a>
    </div>
  </div>
</div>

<% include ./partials/footer %>