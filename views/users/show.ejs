<% include ../partials/header %>
    
    
    
    <div class="user-profile">
        <div id="user-card" class="ui grid container centered stackable">
          <div class="six wide column">
            <div class="ui medium circular image">
              <img src="<%= user.avatar %>">
            </div>
          </div>
          
          <div class="six wide column">
              <h2 class="ui header teal"><%= user.firstName + " " + user.lastName %></h2>
              <% if (user.isAdmin === true) { %>
                <h3 class="ui dividing header">Teacher and Blogger</h3>
                  <div class="ui segments">
                    <h4 class="ui top left teal attached label centered">Check out <%= user.firstName %>'s Posts</h4>
                    <% blogPosts.forEach(function(blogPost) { %>
                        <div class="ui teal segment">
                          <a href="/blogs/<%= blogPost.id %>"><%= blogPost.title %></a>
                        </div>
                    <% }) %>
                  </div>
              <% } else { %>
                  <h3 class="ui dividing header">Simply English Learner</h3>
                  <div class="ui segments">
                    <h4 class="ui top left teal attached label centered">Check out <%= user.firstName %>'s comments</h4>
                    <% comments.forEach(function(comment, i) { %>
                        <div class="ui teal segment">
                            <%= comment.text %>
                        </div>
                    <% }) %>
                  </div>
                <% } %>
              </div>
          </div>
        </div>
      </div>
    
    

<% include ../partials/footer %>