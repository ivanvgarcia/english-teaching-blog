<% include ../partials/header %>

    <div class="ui main text container segment">
        <div class="ui huge header">Edit: "<%= blog.title %>"</div>
        <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="POST">
            <div class="field">
                <label>Title</label>
                <input type="text" name="blog[title]" placeholder="title" value="<%= blog.title %>" required>
            </div>
            <div class="field">
                <label>Level</label>
                <input type="text" name="blog[level]" placeholder="level" value="<%= blog.level %>" required>
            </div>
            <div class="field">
                <label>Image</label>
                <input type="text" name="blog[image]" placeholder="paste image url" value="<%= blog.image %>" required>
            </div>
            <div class="field">
                <label>Blog Content</label>
                <textarea required name="blog[body]"><%= blog.body %></textarea>
            </div>
            <input class="ui primary big basic button"type="submit">
        </form>
    </div>
    
    

<% include ../partials/footer %>