<% include ../partials/header %>


<header class="header">
    <h1 class="header__heading">Simply English</h1>
    <p class="header__caption">A blog for English Language Learners.</p>
</header>

<div class="margin-top-bottom container">
    <div class="margin-top-bottom post-search">
        <h2 class="center-heading">Recent Posts</h2>
        <form action="/blogs" method="GET" class="">
            <div class="">
                <input type="text" name="search" placeholder="Search blogs posts">
                <input type="submit" value="Search" class="">
            </div>
        </form>
    </div>

    <div class="cards">
        <% blogs.forEach(function(blog){ %>
        <div class="card">
            <div class="card__head">
                <small class="card__level">
                    <%= blog.level %>
                </small>
                <img class="card__image" src="<%= blog.image %>">
                <a class="card__button" href="/blogs/<%= blog._id %>">
                    Read More<i class=""></i>
                </a>
            </div>
            <div class="card__content">
                <div class="card__title">
                    <a class="card__title-link" href="/blogs/<%= blog._id %>">
                        <%= blog.title %>
                    </a>
                    <small class="card__date">Posted on
                        <%= moment(blog.created).format("MMMM Do, YYYY") %>
                    </small>
                </div>
                <div class="card__body">
                    <%- blog.body.substring(0, 200) %>...
                </div>
            </div>
            <div class="card__author">
                <img class="card__author-avatar" alt="photo of author" src="<%= blog.author.avatar %>">
                <a class="card__author-name" href="/users/<%= blog.author.id %>">
                    <%= blog.author.username %>
                </a>
            </div>

        </div>
        <% }) %>
    </div>


</div>



<% include ../partials/footer %>